<?xml version="1.0" encoding="utf-8"?>
<Package
    xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
    xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
    IgnorableNamespaces="uap">

  <!-- Must match your signing cert CN -->
  <Identity Name="FTEQuake.UWP"
            Publisher="CN=FTEQuakeTest"
            Version="1.0.0.0" />

  <Properties>
    <DisplayName>FTE Quake</DisplayName>
    <PublisherDisplayName>FTEQW Dev</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
  </Properties>

  <Dependencies>
    <!-- RS5 baseline: 17763 is the minimum Xbox accepts -->
    <TargetDeviceFamily Name="Windows.Universal"
                        MinVersion="10.0.17763.0"
                        MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Applications>
    <Application Id="App"
                 Executable="$targetnametoken$.exe"
                 EntryPoint="Windows.ApplicationModel.Core.CoreApplication">
      <uap:VisualElements
          DisplayName="FTE Quake"
          Description="Quake engine port for UWP/Xbox"
          Square150x150Logo="Assets\Square150x150Logo.png"
          Square44x44Logo="Assets\Square44x44Logo.png"
          BackgroundColor="transparent">
        <!-- Optional wide tile. REMOVE this if you donâ€™t actually have the PNG. -->
        <!-- <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png" /> -->
      </uap:VisualElements>
    </Application>
  </Applications>

  <Capabilities>
    <!-- Minimal safe capabilities for Xbox Dev Mode -->
    <uap:Capability Name="removableStorage" />
    <uap:Capability Name="picturesLibrary" />
    <uap:Capability Name="videosLibrary" />
    <uap:Capability Name="musicLibrary" />
  </Capabilities>
</Package>
